<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/pic"
        app:civ_border_color="#F3F6F3"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/useremail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/background_for_field"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="15dp"
        android:drawableTint="@color/teal_700"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/username2"
        tools:layout_editor_absoluteX="-5dp" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/background_for_field"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="15dp"
        android:drawableTint="@color/teal_700"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/userpassword2"
        tools:layout_editor_absoluteX="13dp" />

    <EditText
        android:id="@+id/userpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/background_for_field"
        android:drawableLeft="@drawable/ic_padlock"
        android:drawablePadding="15dp"
        android:drawableTint="@color/teal_700"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/haveanaccount"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Update Profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/useremail2"
        app:layout_constraintStart_toStartOf="@+id/useremail2"
        app:layout_constraintTop_toBottomOf="@+id/useremail2" />
</androidx.constraintlayout.widget.ConstraintLayout>